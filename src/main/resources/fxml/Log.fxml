<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.log.LogController">
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox fx:id="vbox" HBox.hgrow="ALWAYS">
                    <HBox style="-fx-padding: 2.0" spacing="5">
                        <Button onAction="#sortByUser">
                            <graphic>
                                <ImageView fitHeight="38" fitWidth="38">
                                    <Image url="/icons/menu/filter.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button onAction="#sortByChangeType">
                            <graphic>
                                <ImageView fitHeight="38" fitWidth="38">
                                    <Image url="/icons/menu/filter.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button onAction="#sortByTime">
                            <graphic>
                                <ImageView fitHeight="38" fitWidth="38">
                                    <Image url="/icons/menu/filter.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <HBox spacing="1" HBox.hgrow="ALWAYS">
                        <TextField  promptText="SÃ¸g efter filnavne eller brugernavne her.." fx:id="searchField" minHeight="46" HBox.hgrow="ALWAYS" onKeyReleased="#keyReleased" />
                        </HBox>
                    </HBox>
                <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="event" prefWidth="${tableView.width*0.6}" sortable="false" text="%Log.Change" />
                        <TableColumn fx:id="user" prefWidth="${tableView.width*0.2}" sortable="false" text="%Log.User" />
                        <TableColumn fx:id="time" minWidth="${tableView.width*0.2}" sortable="false" text="%Log.Time" />
                    </columns>
                </TableView>
            </VBox>
        </HBox>
</AnchorPane>
