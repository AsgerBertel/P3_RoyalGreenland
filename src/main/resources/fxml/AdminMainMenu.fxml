<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.FlowPane?>
<BorderPane minHeight="${mainMenuFlowPane.height}" fx:id="menuBorderPane" styleClass="horizontalMenu" stylesheets="@/styles/menubar.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.menu.MainMenuController">
   <left>
      <FlowPane fx:id="mainMenuFlowPane" prefWidth="${menuBorderPane.width - 85}" maxHeight="44">
         <children>
             <ToggleButton styleClass="menuButton" fx:id="administrateDocumentsButton" text="%MainMenu.AdminDoc" onAction="#administrateDocuments">
                 <graphic>
                     <ImageView fitWidth="19" fitHeight="25">
                         <Image url="/icons/menu/adminDocuments.png" />
                     </ImageView>
                 </graphic>
         </ToggleButton>

             <ToggleButton styleClass="menuButton" fx:id="viewDocumentsButton" text="%MainMenu.SeeDoc" onAction="#viewDocuments">
                 <graphic>
                     <ImageView fitWidth="20" fitHeight="24">
                         <Image url="/icons/menu/viewDocuments.png" />
                     </ImageView>
                 </graphic>
             </ToggleButton>

             <ToggleButton styleClass="menuButton" fx:id="administratePlantsButton" text="%MainMenu.AdminPlant" onAction="#administratePlants">
                 <graphic>
                     <ImageView fitWidth="25" fitHeight="24">
                         <Image url="/icons/menu/adminPlants.png" />
                     </ImageView>
                 </graphic>
             </ToggleButton>

             <ToggleButton styleClass="menuButton" fx:id="deletedFilesButton" text="%MainMenu.DeletedFiles" onAction="#deletedFiles">
                 <graphic>
                     <ImageView fitWidth="24" fitHeight="24">
                         <Image url="/icons/menu/deletedFiles.png" />
                     </ImageView>
                 </graphic>
             </ToggleButton>

             <ToggleButton styleClass="menuButton" fx:id="logButton" text="%MainMenu.History" onAction="#log">
                 <graphic>
                     <ImageView fitWidth="24" fitHeight="24">
                         <Image url="/icons/menu/history.png"/>
                     </ImageView>
                 </graphic>
             </ToggleButton>


             <ToggleButton styleClass="menuButton" fx:id="settingsButton" text="%MainMenu.Settings" onAction="#settings">
                 <graphic>
                     <ImageView fitWidth="23" fitHeight="25">
                         <Image url="/icons/menu/settings.png"/>
                     </ImageView>
                 </graphic>
             </ToggleButton>

         </children>
      </FlowPane>
   </left>

   <right>
      <HBox minWidth="60">
         <children>
            <ToggleButton styleClass="menuButton" fx:id="danishButton" onAction="#danishButton">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="/icons/menu/danish.png"  />
                    </ImageView>
                </graphic>
            </ToggleButton>

            <ToggleButton styleClass="menuButton" fx:id="greenlandicButton" onAction="#greenlandicButton">
                <graphic >
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="/icons/menu/greenlandic.png"/>
                    </ImageView>
                </graphic>
            </ToggleButton>
         </children>
      </HBox>
   </right>
</BorderPane>
