<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox fx:id="fileAdminHBox" stylesheets="@/styles/masterSheet.css,@/styles/fileAdministration.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FileAdminController">

    <!-- Side menu -->
    <VBox styleClass="verticalMenu" stylesheets="@/styles/menubar.css">
        <Button fx:id="uploadButton" onAction="#uploadDocument" styleClass="menuButton">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="/icons/menu/adddocument.png" />
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="createFolderButton" onAction="#createFolder" styleClass="menuButton">
            <graphic>
                <ImageView fitHeight="40" fitWidth="40">
                    <Image url="/icons/menu/addfolder.png" />
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="deleteFileButton" onAction="#deleteFile" styleClass="menuButton">
            <graphic>
                <ImageView fitHeight="39" fitWidth="39">
                    <Image url="/icons/menu/delete.png" />
                </ImageView>
            </graphic>
        </Button>
    </VBox>

    <!-- File tree -->
    <VBox fx:id="leftSideVbox">
        <HBox maxHeight="40" minHeight="40" prefWidth="${fileAdminHBox.width}" styleClass="filler">
            <Text styleClass="darkGreyTitle" text="%AdminFiles.Files" translateX="10" translateY="5" />
        </HBox>
        <TreeView fx:id="fileTreeView" minWidth="300" prefHeight="${leftSideVbox.height}" stylesheets="@/styles/fileTree.css" />

    </VBox>

    <!-- Splitter -->
    <Pane styleClass="verticalSplitter" />

    <!-- Factory list -->
    <VBox id="plantSection" stylesheets="@/styles/factoryList.css">
        <HBox maxHeight="30" minHeight="30" styleClass="filler">
            <Text fx:id="plantListTitle" styleClass="darkGreyTitle" text="%AdminFiles.Plants" />
            <Text fx:id="plantCountText" styleClass="greyTitle" text=" (0)" />
        </HBox>
        <ScrollPane id="plantScrollPane" translateY="10">
            <VBox id="plantVBox" fx:id="plantVBox" />
        </ScrollPane>
    </VBox>

    <!-- Changes overview -->
    <VBox id="changesSection" fx:id="changesSection" maxWidth="220" minWidth="220" prefHeight="1670.0" prefWidth="216.0">
        <Text styleClass="bigTitle" text="%AdminFiles.Changes" translateY="15"/>
        <Text styleClass="smallNote" text="%AdminFiles.LastUpdated" translateY="13" />
        <Text fx:id="lastUpdatedText" styleClass="smallNote" text="%AdminFiles.LastUpdated" translateY="13" />
        <Text styleClass="standardText" text="%AdminFiles.NewChanges" translateY="15" />

        <ScrollPane id="changesScrollPane" fx:id="changesScrollPane" maxHeight="${changesSection.height * 0.75}" minWidth="${changesSection.width}" translateY="30">
            <VBox fx:id="changesVBox" minWidth="${changesSection.width}" styleClass="changesVBox" />
        </ScrollPane>

        <Button fx:id="publishChangesButton" id="publishChangesButton" onAction="#onPublishChanges" styleClass="darkButton" text="%AdminFiles.PublishChanges" translateY="50" />
    </VBox>
</HBox>
