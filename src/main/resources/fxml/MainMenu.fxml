<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane styleClass="horizontalMenu" stylesheets="@/styles/menubar.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.menu.MainMenuController">
   <left>
      <HBox>
         <children>
             <Button text="%MainMenuAdminDoc" onAction="#administrateDocuments">
                 <graphic>
                     <ImageView fitWidth="19" fitHeight="25">
                         <Image url="/icons/menu/adminDocuments.png" />
                     </ImageView>
                 </graphic>
         </Button>

             <Button text="%MainMenuSeeDoc" onAction="#viewDocuments">
                 <graphic>
                     <ImageView fitWidth="20" fitHeight="24">
                         <Image url="/icons/menu/viewDocuments.png" />
                     </ImageView>
                 </graphic>
             </Button>

             <Button text="%MainMenuAdminPlant" onAction="#administratePlants">
                 <graphic>
                     <ImageView fitWidth="25" fitHeight="24">
                         <Image url="/icons/menu/adminPlants.png" />
                     </ImageView>
                 </graphic>
             </Button>

             <Button text="%MainMenuDeletedFiles" onAction="#deletedFiles">
                 <graphic>
                     <ImageView fitWidth="24" fitHeight="24">
                         <Image url="/icons/menu/deletedFiles.png" />
                     </ImageView>
                 </graphic>
             </Button>

             <Button text="%MainMenuHistory" onAction="#log">
                 <graphic>
                     <ImageView fitWidth="24" fitHeight="24">
                         <Image url="/icons/menu/history.png"/>
                     </ImageView>
                 </graphic>
             </Button>

         </children>
      </HBox>
   </left>

   <right>
      <HBox>
         <children>
            <Button onAction="#changeToDanish">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="/icons/menu/danish.png"  />
                    </ImageView>
                </graphic>
            </Button>

            <Button onAction="#changeToGreenlandic">
                <graphic >
                    <ImageView fitWidth="24" fitHeight="24">
                        <Image url="/icons/menu/greenlandic.png"/>
                    </ImageView>
                </graphic>
            </Button>
         </children>
      </HBox>
   </right>
</BorderPane>
